<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ meta.title|default(config.title) }}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="{{ meta.description|default(config.description) }}">
    <meta name="keywords" content="{{ meta.keywords|default(config.keywords) }}">
    <meta name="author" content="{{ meta.author|default(config.author) }}">
    <link rel="dns-prefetch" href="https://google-analytics.com">
    <link rel="alternate" href="/" hreflang="en-us" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/app.min.css">
    <link rel="shortcut icon" type="image/png" href="/favicon.ico"/>
    <link rel="icon" type="image/png" sizes="32x32" href="/assets/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="96x96" href="/assets/img/favicon-96x96.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/assets/img/favicon-16x16.png">
</head>
<body>
{% block header %}
    <div class="container">
        <header class="blog-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-2 pt-1">
                    <a class="text-muted" href="/">Ahmad Samiei</a>
                </div>
                <div class="col-8 d-flex justify-content-end align-items-center">
                    <nav class="my-2 my-md-0 mr-md-3">
                        <a class="p-2" href="/">blog</a>
                        <a class="p-2" href="https://twitter.com/{{ config.twitter_handle }}"><i class="fa fa-twitter"></i></a>
                        <a class="p-2" href="http://github.com/amad"><i class="fa fa-github"></i></a>
                        <a class="p-2" href="http://linkedin.com/in/ahmadsamiei/"><i class="fa fa-linkedin"></i></a>
                        <a class="p-2" href="/rss.xml"><i class="fa fa-rss"></i></a>
                    </nav>
                </div>
            </div>
      </header>
    </div>
{% endblock %}

<div class="container">
    {% block content %}{% endblock %}
</div>

{% block footer %}{% endblock %}
<script>
    if (window.location.hostname !== 'localhost') {
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
        ga('create', 'UA-69085808-1', 'auto');
        ga('send', 'pageview');
    }
</script>
<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
</body>
</html>
