---
permalink: /sitemap.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    <url>
        <loc>{{ config.base_url }}/</loc>
        <lastmod>{{ now|date('Y-d-m') }}</lastmod>
        <changefreq>monthly</changefreq>
    </url>
    <url>
        <loc>{{ config.base_url }}/index.html</loc>
        <lastmod>{{ now|date('Y-d-m') }}</lastmod>
        <changefreq>monthly</changefreq>
    </url>
    <url>
        <loc>{{ config.base_url }}/about.html</loc>
        <lastmod>{{ now|date('Y-d-m') }}</lastmod>
        <changefreq>yearly</changefreq>
    </url>
    <url>
        <loc>{{ config.base_url }}/my-reading-list.html</loc>
        <lastmod>{{ now|date('Y-d-m') }}</lastmod>
        <changefreq>yearly</changefreq>
    </url>
    {% for year, postsOfYear in posts %}
    {% for post in postsOfYear %}
    <url>
        <loc>{{ post.post_url }}</loc>
        <lastmod>{{ post.meta.date|date('Y-d-m') }}</lastmod>
        <changefreq>yearly</changefreq>
    </url>
    {% endfor %}
    {% endfor %}
</urlset>
